pipeline {
    agent any

    tools {
		maven 'my-maven'
		jdk 'my-jdk'
	}

    stages {
        stage('Git') {
            steps {
                echo 'Git clone done'
                git url:'https://github.com/Yamini6302/author-service.git', branch:'main'
            }
        }
         stage('Build') {
            steps {
                echo 'Build done'
                bat "mvn clean install -DskipTests"
            }
         }
          
           stage('Deploy') {
            steps {
		bat "docker rm author-service"
		bat "docker rmi author-service"
                echo 'Deploy done'
                 bat "docker build -t author-service ."
			             bat "docker run -p 9998:9998 -d --name author-service author-service"
            }

        }

    }

}
